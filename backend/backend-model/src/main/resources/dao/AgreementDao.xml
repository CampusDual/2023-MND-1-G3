<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup
    xmlns="http://www.ontimize.com/schema/jdbc"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
    catalog=""  table="AGREEMENTS"
    datasource="mainDataSource" sqlhandler="dbSQLStatementHandler">
    <DeleteKeys>
        <Column>AG_ID</Column>
    </DeleteKeys>
    <UpdateKeys>
        <Column>AG_ID</Column>
    </UpdateKeys>
    <Queries>
        <Query id="default">
            <AmbiguousColumns>
                <AmbiguousColumn name="C_ID" prefix="AG"/>
            </AmbiguousColumns>
            <Sentence>
                <![CDATA[
                    SELECT
                    #COLUMNS#
                    FROM AGREEMENTS AG
                    INNER JOIN CONVERSATIONS C ON AG.C_ID = C.C_ID
                    #WHERE#
                ]]>
            </Sentence>
        </Query>
         <Query id="lastAgreementId">
             <AmbiguousColumns>
                 <AmbiguousColumn name="C_ID" prefix="t"/>
                 <AmbiguousColumn name="AG_ID" prefix="agr"/>
             </AmbiguousColumns>
            <Sentence>
                <![CDATA[
                 WITH TEMPORAL AS (
                    select max(ag_id) as ag_id, ag.c_id, c.c_end_datetime
                    from agreements ag
                    inner join conversations c on ag.c_id = c.c_id
                    group by ag.c_id, c.c_end_datetime
                    )
                    SELECT #COLUMNS# FROM TEMPORAL t
                    INNER JOIN AGREEMENTS agr ON agr.ag_id = t.ag_id
                    #WHERE#
                ]]>
            </Sentence>
        </Query>
    </Queries>
</JdbcEntitySetup>